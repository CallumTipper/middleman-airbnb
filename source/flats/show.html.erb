<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
  <div class="banner-content text-center">
    <h1><%= flat.name.capitalize %></h1>
    <p><%= flat.city_name.capitalize %></p>
    <a class="btn btn-primary btn-lg">Book now</a>
    <div class="banner-avatar">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
    </div>
  </div>
</div>

<div class="container flat-info">
  <div class="desc">
    <h3><%= flat.description %></h2>
    <p><%= flat.detail %></p>
  </div>
  <form action="#" class="booking">
    <h3>Book now</h3>
    <div class="form-group ">
    <label for="date">Check-in</label>
    <input type="date" class="form-control" placeholder="DD/MM/YYY">
    </div>
    <div class="form-group">
    <label for="date">Check-out</label>
    <input type="date" class="form-control" placeholder="DD/MM/YYY">
    </div>
    <input type="submit" class="btn btn-primary">
  </form>
  <div class="list-info">
    <h3>Details</h3>
    <ul>
      <li><%= flat.wifi %></li>
      <li><%= flat.rating %></li>
      <li><%= flat.Accommodates %></li>
      <li><%= flat.Bathrooms %></li>
      <li><%= flat.Bed_type %></li>
      <li><%= flat.Bedrooms %></li>
      <li><%= flat.Beds %></li>
      <li><%= flat.Property_type %></li>
      <li><%= flat.Room_type %></li>
    </ul>
  </div>
</div>


